{
    "name": "Feedly Console",
    "description": "tilde or click to open console to enter feedly commands.",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "128": "icon/utilities-terminal-5_128.png", 
        "16": "icon/utilities-terminal-5_16.png", 
        "22": "icon/utilities-terminal-5_22.png", 
        "32": "icon/utilities-terminal-5_32.png", 
        "48": "icon/utilities-terminal-5_48.png"
    },
    "permissions" : [
        "tabs",
        "cookies",
        "*://*.feedly.com/"
    ],
    "background" : {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [ "*://*.feedly.com/*" ],
            "js": [
                //"jquery.min.js",
                "javascript/jquery.js",
                "javascript/jquery-ui.min.js",
                "javascript/underscore-min.js",
                "javascript/killring.js",
                "javascript/history.js",
                "javascript/readline.js",
                "javascript/shell.js",
                "javascript/pathhandler.js",
                "feedlyconsole.js"
            ],
            "all_frames": false
        } 
    ],
    "web_accessible_resources": [
        "javascript/jquery.min.map",
        "javascript/jquery-ui.min.map",
        "feedlyconsole.css", 
        "stylesheets/source-code-pro.css",
        "feedlyconsole.html",
        "inject.js"
        
    ],
    "page_action": {
        "default_title": "Feedly Console",
        "default_icon": {
            "19": "icon/utilities-terminal-5_19.png", 
            "38": "icon/utilities-terminal-5_38.png"
        }
    },
    "commands": {
        "toggle-console": {
            "suggested_key": {
                "default": "Alt+C",
                "mac": "Alt+C"
            },
            "description": "Toggle Console"
        }
    }
}
